# MentalMap-Tool Umgebungsvariablen

# Server-Konfiguration
NODE_ENV=development
PORT=3003
HOST=0.0.0.0

# Datenbank - MySQL Konfiguration
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=mentalmap_user
DB_PASSWORD=your_secure_password
DB_NAME=mentalmap
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=24h

# Upload-Konfiguration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_AUDIO_TYPES=mp3,wav,ogg

# CORS-Konfiguration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Sicherheit
SESSION_SECRET=your-secret-key-here
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/mentalmap.log

# Feature-Flags
ENABLE_AUDIO_UPLOAD=true
ENABLE_STUDY_EXPORT=true
ENABLE_ADMIN_INTERFACE=true

# Map-Konfiguration
DEFAULT_MAP_CENTER_LAT=46.5
DEFAULT_MAP_CENTER_LNG=2.5
DEFAULT_MAP_ZOOM=6
DEFAULT_BASEMAP=openstreetmap

# Teilnehmer-Code-Konfiguration
PARTICIPANT_CODE_PREFIX=MM
PARTICIPANT_CODE_LENGTH=8
PARTICIPANT_CODE_TIMESTAMP=true

# Export-Konfiguration
EXPORT_MAX_RECORDS=10000
EXPORT_TIMEOUT=30000

# Backup-Konfiguration
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true