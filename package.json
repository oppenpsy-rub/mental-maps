{
  "name": "mentalmap-prototype",
  "version": "1.0.0",
  "description": "Mental Map Tool - Prototype for linguistic perception mapping",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "keywords": [
    "linguistics",
    "mapping",
    "perception",
    "dialects"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "i18next": "^25.5.2",
    "jsonwebtoken": "^9.0.2",
    "react-i18next": "^16.0.0"
  }
}
